{
  "config": {
    "sort-package": true
  },
  "require": {
    "php": ">=7.1.0",
    "roave/security-advisories": "dev-master"
  },
  "autoload": {
    "psr-4": {
      "Miranda\\": "src/Miranda/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Miranda\\Tests\\": "tests/Miranda/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^7.5"
  },
  "scripts": {
    "serve": "php -S 0.0.0.0:8080 -t public public/index.php",
    "test": "phpunit --color=always"
  }
}
